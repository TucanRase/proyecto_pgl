<?xml version="1.0" encoding="utf-8"?><!-- layout del componente a mostrar,además le añadimos el efecto al clicar(clickable y foreground) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/btn_redondo"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="5dp">
    <!-- Ajustes básicos de los distintos campos como puede ser el margin o padding y color -->
    <ImageView
        android:id="@+id/ivImagen"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/imagen_del_componente"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textColor="#212121"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/textview"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/txtPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textAlignment="textEnd"
            android:textColor="#212121" />
    </LinearLayout>
</LinearLayout>